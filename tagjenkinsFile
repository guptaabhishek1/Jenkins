pipeline 
{
  agent any
  stages { 
    stage('TagEC2Resources') {
      steps{
        script{
          InstanceIds = params.InstanceId
          AutoScalingIds = params.AutoScalingGroupId
          
          // if InstanceId or AutoScalingGroup is empty , assigning None
          if (params.InstanceId == ""){
            InstanceIds = "None"
          }
          if (params.AutoScalingGroupId == ""){
            AutoScalingIds = "None"
          }
          
          //calling python script
          sh "python DeathTimeTag.py ${InstanceIds} ${AutoScalingIds} ${params.DeathTime}"
        }
      }
    }
  }
}
